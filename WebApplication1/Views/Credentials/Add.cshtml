@model Credentials
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.7.1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<section class="vh-50 gradient-custom">
    <div class="container py-5 h-50">
        <div class="row d-flex justify-content-center align-items-center h-50">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body ps-5 pe-5 text-center">
                        <form method="post" asp-action="Add" asp-controller="Credentials" id="registerform">
                            <div class="mb-md-5 mt-md-4">
                                <img class="img border border-1 border-danger mb-1" src="/res/transparentbg.png" id="profile">
                                <h2 class="fw-bold mb-2 text-uppercase">Register</h2>
                                <p class="text-white-50 mb-3">Fill out the Form!</p>
                                <div class="form-floating mb-4">
                                    <div class="btn-group mx-auto" style="width: 100%">
                                        <button type="button" id="iconddbtn" class="btn-lg btn-secondary dropdown-toggle form-control" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
                                            Select Icon
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-lg-end">
                                            <li><button class="dropdown-item" type="button" onclick="selectedIcon('1')">1</button></li>
                                            <li><button class="dropdown-item" type="button" onclick="selectedIcon('2')">2</button></li>
                                            <li><button class="dropdown-item" type="button" onclick="selectedIcon('3')">3</button></li>
                                        </ul>
                                    </div>
                                    <input type="hidden" asp-for="ProfileIcon" id="iconselect" required/>
                                </div>
                                <div class="form-floating form-white mb-4">
                                    <input type="text" asp-for="UserName" id="user" class="form-control form-control-lg" required maxlength="15" />
                                    <label asp-for="UserName" class="form-label text-primary" for="user">Username</label>
                                </div>
                                <div class="form-floating form-white mb-4">
                                    <input type="password" asp-for="Password" id="password" class="form-control form-control-lg" required maxlength="25" />
                                    <label asp-for="Password" class=" form-label text-primary" for="password">Password</label>
                                </div>
                                <button class="btn btn-outline-light btn-lg px-5" type="submit">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div>
    <a asp-controller="Home" asp-action="Index" class="btnback" style="--clr:#FC43C5" onclick="optionSelected('bg')">
        <span>Back</span><i></i>
    </a>
</div>

@if (TempData.ContainsKey("UserExists"))
{
    <script>
        var errorMessage = '@TempData["UserExists"]';
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: errorMessage,
        });
    </script>
}

@if (TempData.ContainsKey("PasswordExists"))
{
    <script>
        var errorMessage = '@TempData["PasswordExists"]';
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: errorMessage,
        });
    </script>
}

@if (TempData.ContainsKey("NoIcon"))
{
    <script>
        var errorMessage = '@TempData["NoIcon"]';
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: errorMessage,
        });
    </script>
}

@if (TempData.ContainsKey("SuccessMessage"))
{
    <script>
        var successMessage = '@TempData["SuccessMessage"]';
        Swal.fire({
            icon: 'success',
            title: 'Success',
            text: successMessage,
        });
    </script>
}