@model EnrollmentDetails

<style>
	.card-wrapper {
		max-height: 530px;
		overflow-y: auto;
	}

	form {
		width: 100%;
	}
</style>

<div class="m-5">
	<div class="card-wrapper viewform" style="--clr:#FF8300">
		<h3 class="format text-center">Edit Details</h3>
		<form method="post" asp-action="Edit" asp-controller="EnrollmentDetails">
			<div class="p-3 m-4">
				<div class="container mb-3">
					<div class="row">
						<div class="col">
							<div class="form-floating">
								<input asp-for="ENRDFSTUDID" type="text" class="form-control" readonly />
								<label asp-for="ENRDFSTUDID"></label>
							</div>
						</div>
					</div>
				</div>
				<div class="container mb-3">
					<div class="row">
						<div class="col">
							<div class="form-floating">
								<input asp-for="ENRDFSTUDEDPCODE" type="text" class="form-control" readonly />
								<label asp-for="ENRDFSTUDEDPCODE"></label>
							</div>
						</div>
					</div>
				</div>
				<div class="container mb-3">
					<div class="row">
						<div class="col">
							<div class="form-floating">
								<input asp-for="ENRDFSTUDSUBJCODE" type="text" class="form-control" readonly />
								<label asp-for="ENRDFSTUDSUBJCODE"></label>
							</div>
						</div>
					</div>
				</div>
				<div class="container mb-3">
					<div class="row">
						<div class="col">
							<div class="form-floating">
								<input asp-for="ENRDFSTUDSTATUS" type="text" class="form-control" />
								<label asp-for="ENRDFSTUDSTATUS"></label>
							</div>
						</div>
					</div>
				</div>
				<div class="container">
					<div class="row">
						<div class="col">
							<div class="mb-3 mt-3 text-center">
								<button type="submit" class="btn-lg btn-success" style="width: 200px">Update</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>


<div>
	<a asp-controller="EnrollmentDetails" asp-action="Index" class="btnback" style="--clr:#FF8300">
		<span>Back</span><i></i>
	</a>
</div>